<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#77000000"
    android:gravity="center">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/dp_400"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:layout_margin="@dimen/dp_40"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:text="设备配置"
            android:textSize="@dimen/sp_22"
            android:textColor="@android:color/black"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/tv_settings"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_60"
            android:layout_marginEnd="@dimen/dp_16"
            android:text="系统设置"
            android:textSize="@dimen/sp_18"
            android:textColor="@android:color/holo_orange_dark"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <EditText
            android:id="@+id/et_device_code"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:hint="输入设备编号"
            android:inputType="textUri"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:layout_constraintStart_toStartOf="parent" />
        <EditText
            android:id="@+id/et_screen_num"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:hint="输入屏幕编号"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            app:layout_constraintTop_toBottomOf="@id/et_device_code"
            app:layout_constraintStart_toStartOf="parent" />
        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_60"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_marginEnd="@dimen/dp_60"
            android:text="确认"
            android:textSize="@dimen/sp_22"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_screen_num"
            android:textColor="@android:color/holo_blue_light"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_60"
            android:layout_marginEnd="@dimen/dp_40"
            android:text="取消"
            android:textSize="@dimen/sp_22"
            app:layout_constraintEnd_toStartOf="@id/tv_confirm"
            app:layout_constraintTop_toTopOf="@id/tv_confirm"
            android:gravity="center"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>